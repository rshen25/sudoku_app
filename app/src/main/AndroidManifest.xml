<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sudoku.android.mysudokuapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sudoku.android.mysudokuapp.OptionsMenu"
            android:label="@string/title_activity_options_menu"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.sudoku.android.mysudokuapp.SudokuPuzzle"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.sudoku.android.mysudokuapp.PuzzleSelect" />
        <activity
            android:name="com.sudoku.android.mysudokuapp.DifficultySelect"
            android:label="@string/title_activity_difficulty_select"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.sudoku.android.mysudokuapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>